<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <title>BookingUni</title>
        <link rel="stylesheet" href="/static/css/style.css" />
    </head>

    <body>

        <div id="container">
            <nav>
                <div class="left-container">
                    <ul>
                        <li><a href="/">Home</a></li>
                        {{#if user}}
                            <li><a href="/hotel/create">Add +</a></li>
                        {{/if}}
                    </ul>
                </div>
                <div class="right-container">
                    {{#if user}}
                        <a href="/profile" class="log-out">{{user.username}}</a>
                        <a href="/auth/logout" class="log-out">Logout</a>
                    {{else}}
                        <a href="/auth/login" class="log-out">Login</a>
                        <a href="/auth/register" class="log-out">Register</a>
                    {{/if}}
                </div>
            </nav>

            {{#if error}}
                <div id="container">
                    <div class="notification errorBox">
                        <span>{{{error}}}</span>
                    </div>
                </div>
            {{/if}}

            {{{body}}}

            <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
        </div>

    </body>

</html>