<section id="editPage">
    <form id="editForm" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{name}}" />

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{type}}" />

        <label for="production">Year of Production:</label>
        <input
            type="number"
            id="production"
            name="productionYear"
            value="{{productionYear}}"
        />

        <label for="exploitation">Years of Exploitation:</label>
        <input
            type="number"
            id="exploitation"
            name="exploitationYear"
            value="{{exploitationYear}}"
        />

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages" value="{{damages}}" />

        <label for="image">Image:</label>
        <input type="text" id="image" name="imageUrl" value="{{imageUrl}}" />

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{price}}" />

        <label for="description">Description:</label>
        <input
            type="text"
            id="description"
            name="description"
            value="{{description}}"
        />

        <input type="submit" class="edit" value="Edit Offer" />
    </form>
</section>