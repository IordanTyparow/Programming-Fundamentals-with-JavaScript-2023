<section id="detailsPage">
    <div id="detailsInfo">
        <h1>Name: {{name}}</h1>
        <div class="info"><img src="{{imageUrl}}" /></div>

        <div class="info">
            <h3>Type: {{type}}</h3>
            <h3>Year of Production: {{productionYear}}</h3>
            <h3>Years of Exploitation: {{exploitationYear}}</h3>
            <h3>Damages: {{damages}}</h3>
            <h3>Description: {{description}}</h3>
            <h2>Price: ${{price}}</h2>
        </div>

        <!--If there is user logged in-->
        {{#if user}}
            <div class="buttons">
                {{#if isOwner}}
                    <!--If user is owner-->
                    <a href="/offer/{{_id}}/edit" class="edit-btn">Edit</a>
                    <a
                        href="/offer/{{_id}}/delete"
                        class="delete-btn"
                    >Delete</a>
                {{else}}
                    {{#if isBuyed}}
                        <!--If user is not the owner and is bought this toy-->
                        <p><span class="buy">Thank You For Your Purchase</span></p>
                    {{else}}
                        <!--If user is not owner of the toy post-->
                        <a href="/offer/{{_id}}/buy" class="buy-btn">Buy</a>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</section>